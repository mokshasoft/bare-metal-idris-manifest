<manifest>

<remote
    name="mokshasoft"
    fetch="https://github.com/mokshasoft/"/>

<!-- include starterwarefree -->
<project
    name="starterwarefree.git"
    path="starterwarefree"
    revision="master"
    remote="mokshasoft"/>

<!-- include starterwarefree-idris-ffi -->
<project
    name="starterwarefree-idris-ffi.git"
    path="starterwarefree-idris-ffi"
    revision="master"
    remote="mokshasoft"/>

<!-- include Idris RTS, using the one for seL4 -->
<project
    name="libsel4-idris-rts.git"
    path="libsel4-idris-rts"
    revision="master"
    remote="mokshasoft">
    <linkfile src="rts/seL4/CMakeLists.txt" dest="libsel4-idris-rts/CMakeLists.txt"/>
</project>

<!-- include Idris apps -->
<project
    name="bare-metal-idris.git"
    path="bare-metal-idris"
    revision="master"
    remote="mokshasoft">
    <linkfile src="tools/CMake/top-level.cmake" dest="CMakeLists.txt"/>
    <linkfile src="tools/CMake/Idris.cmake" dest="tools/CMake/Idris.cmake"/>
</project>

</manifest>
